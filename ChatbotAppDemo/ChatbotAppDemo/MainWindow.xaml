<Window x:Class="ChatbotAppDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chatbot" Height="350" Width="525">
    <Grid>
        <TextBox Name="UserMessageTextBox" Height="30" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <Button Name="sendBtn" Content="Send" Height="30" Margin="10,50,10,0" VerticalAlignment="Top" Click="sendBtn_Click"/>
        <TextBox Name="BotResponseTextBox" Margin="10,90,10,10" VerticalAlignment="Top" TextWrapping="Wrap" AcceptsReturn="True"/>
    </Grid>
</Window>
